{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "src" // Thêm dòng này để Typescript nhận diện thư mục src
  ],
  "exclude": [
    "node_modules"
  ] // Thêm dòng này để loại trừ node_modules
}